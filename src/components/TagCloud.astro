---
const { tags } = Astro.props
---

<div class="tags">
  {
    tags.map((tag: string) => (
      <a href={`/tags/${tag}`}>
        <section class="tag-item">{tag}</section>
      </a>
    ))
  }
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    margin-top: 24px;
  }

  .tag-item {
    padding: 8px;
    margin: 6px;
    font-size: 16px;
    background-color: #bfcfe7;
    color: black;
  }
</style>
