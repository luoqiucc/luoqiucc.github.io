---
import Navigation from './Navigation.astro'
import Logo from './Logo.astro'
---

<header class="header">
  <section class="header-content">
    <Navigation />
    <Logo />
  </section>
</header>

<style>
  .header {
    width: 100%;
    height: 64px;
    background-color: black;
  }

  .header-content {
    max-width: 1032px;
    height: 100%;
    margin: auto;
    padding: 0 16px;
    display: flex;
    justify-content: space-between;
  }
</style>
